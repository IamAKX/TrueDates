<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_weight="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_margin="5dp"
    android:id="@+id/card"
    app:cardBackgroundColor="@color/themePink"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/card_linear_layout"
        android:background="@drawable/top_left_bottom_right_gradient"
        android:layout_margin="3dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"

        android:paddingBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:id="@+id/quantity"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="months"
            android:id="@+id/unit"
            android:textSize="18dp"/>

        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/amountPerUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 182.6/mo"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 18,287"
            android:textStyle="bold"
            android:id="@+id/amount"
            android:textColor="@color/whiteGray"
            android:textSize="16dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>